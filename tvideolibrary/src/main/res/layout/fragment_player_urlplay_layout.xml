<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alivc_common_margin_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textColor="@color/alivc_common_font_white_light"
                android:textSize="@dimen/alivc_common_font_16"
                android:text="URL"/>

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="@dimen/alivc_common_padding_20"
                android:src="@drawable/ic_qrcode"
                />
        </FrameLayout>

        <EditText
            android:id="@+id/et_play_url"
            style="@style/edit_line_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alivc_common_margin_20"
            android:hint="@string/input_url_here"
            android:text="http://player.alicdn.com/video/aliyunmedia.mp4" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_player"
        style="@style/btn_style"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_player_ui" />
</FrameLayout>